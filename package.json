{
    "name": "@jmrashed/chat-backend",
    "version": "1.0.2",
    "description": "Professional real-time chat application backend server built with Node.js, Express.js, Socket.IO, and MongoDB. Features JWT authentication, file sharing, rate limiting, comprehensive testing, and enterprise-grade security.",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "test": "jest --detectOpenHandles",
        "test:unit": "jest tests/auth.test.js tests/chatRoom.test.js tests/message.test.js tests/fileUpload.test.js --detectOpenHandles",
        "test:integration": "jest tests/integration.test.js --detectOpenHandles",
        "test:performance": "jest tests/performance.test.js --detectOpenHandles --runInBand",
        "test:coverage": "jest --coverage --detectOpenHandles",
        "test:watch": "jest --watch --detectOpenHandles",
        "test:db": "jest tests/database.test.js --detectOpenHandles",
        "test:login": "jest tests/login.test.js --detectOpenHandles",
        "lint": "eslint .",
        "prestart": "node -e 'require(\"dotenv\").config()'",
        "seed": "node seeder.js"
    },
    "keywords": [
        "nodejs",
        "express",
        "socket.io",
        "mongodb",
        "mongoose",
        "chat-application",
        "real-time",
        "websocket",
        "jwt-authentication",
        "file-sharing",
        "rest-api",
        "backend",
        "server",
        "messaging",
        "rate-limiting",
        "security",
        "bcrypt",
        "joi-validation",
        "jest-testing",
        "docker",
        "scalable",
        "enterprise",
        "microservice",
        "api"
    ],
    "author": {
        "name": "Md Rasheduzzaman",
        "email": "jmrashed@gmail.com",
        "url": "https://jmrashed.github.io"
    },
    "contributors": [
        {
            "name": "Md Rasheduzzaman",
            "email": "jmrashed@gmail.com",
            "url": "https://github.com/jmrashed"
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jmrashed/chat-backend.git"
    },
    "homepage": "https://github.com/jmrashed/chat-backend#readme",
    "bugs": {
        "url": "https://github.com/jmrashed/chat-backend/issues",
        "email": "jmrashed@gmail.com"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/jmrashed"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "ejs": "^3.1.10",
        "express": "^4.21.1",
        "express-ejs-layouts": "^2.5.1",
        "express-rate-limit": "^7.4.1",
        "express-validator": "^6.14.2",
        "helmet": "^8.0.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.8.2",
        "multer": "^1.4.5-lts.1",
        "socket.io": "^4.7.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.15.0"
    },
    "devDependencies": {
        "axios": "^1.12.2",
        "dotenv": "^16.4.5",
        "eslint": "^8.51.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.27.5",
        "jest": "^29.6.2",
        "nodemon": "^3.1.7",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "coverageDirectory": "coverage"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "os": [
        "linux",
        "darwin",
        "win32"
    ],
    "private": false,
    "publishConfig": {
        "access": "public"
    }
